<link rel="stylesheet" href="/stylesheets/style.css">

<!-- search bar -->
<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-10 d-flex justify-content-between ">
      <div class="search-bar">
        <div class=" ">
          <div class="search-bar-inner">
            <form action="/search">
              <div class="input-group">
                <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                  aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                <div class="input-group-append">
                  <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <form action="/" method="POST">
        <div class="form-group">
          <select id="sort" name="sort" class="form-control" onchange="submit()">
            <option>--排序方式--</option>
            <option value="AtoZ">A > Z</option>
            <option value="ZtoA">Z > A</option>
            <option value="category">類別</option>
            <option value="location">地區</option>
          </select>

        </div>
      </form>

    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-deck">
        {{#each restaurant}}
        <div class="col-md-4">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3 ">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
              <div class="card-body ">
                <a href="/restaurants/{{this._id}}/edit">
                  <button class="btn btn-primary btn-sm">Edit</button>
                </a>

                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-success btn-sm">delete</button>
                </form>
              </div>
            </div>
          </a>
        </div>

        {{/each}}

      </div>
    </div>
  </div>
</div>