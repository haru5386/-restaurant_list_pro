<link rel="stylesheet" href="/stylesheets/new.css">

<div class="container">
  <h2 class="m-3">編輯餐廳</h2>
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="name">餐廳名稱</label>
        <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" required>
      </div>
      <div class="form-group col-md-4">
        <label for="name_en">餐廳英文</label>
        <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}">
      </div>
      <div class="form-group col-md-4">
        <label for="category">餐廳分類</label>
        <select name="category" class="form-control" id="category" required>
          <option value="">--請選擇分類--</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="美式">美式</option>
          <option value="酒吧">酒吧</option>
          <option value="日本料理">日本料理</option>
          <option value="咖啡">咖啡</option>
          <option value="中東料理">中東料理</option>
        </select>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <label for="image">圖片位址</label>
        <input type="text" class="form-control" id="image" value="{{restaurant.image}}" name="image" required>
      </div>
      <div class="form-group col-md-4">
        <label for="rating">餐廳評分</label>
        <input type="number" class="form-control" id="rating" value="{{restaurant.rating}}" name="rating" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <label for="location">餐廳地址</label>
        <input type="text" class="form-control" id="location" value="{{restaurant.location}}" name="location">
        required
      </div>
      <div class="form-group col-md-4">
        <label for="phone">餐廳電話</label>
        <input type="text" class="form-control" id="phone" value="{{restaurant.phone}}" name="phone" required>
      </div>
    </div>
    <div class="form-group">
      <label for="description">餐廳介紹</label>
      <textarea class="form-control" id="description" rows="3" name="description"
        required>{{restaurant.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">儲存</button>
  </form>
</div>